<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:viewmodels="clr-namespace:WpfApp.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="/image/icon/simple_library.ico"
        Title="TEST" Width="1080" Height="720">
    
    <Border BorderThickness="3">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
                <GradientStop Color="#2c3e50" Offset="0"/>
                <GradientStop Color="#34495e" Offset="0.80"/>
                <GradientStop Color="#34495e" Offset="0.40"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <DockPanel>
            
            <!-- Info Bar Up -->
            <Menu DockPanel.Dock="Top">
                <MenuItem Height="25" Header="_Home" Click="HomeView_Click"/>
                <MenuItem Header="_Backup">
                    <MenuItem Header="_New" />
                    <MenuItem Header="_Load" />
                </MenuItem>
                <MenuItem Header="_?">
                    <MenuItem Header="_about" Click="MenuItemAbout_Click" />
                </MenuItem>
            </Menu>

            <!-- Info System Down -->
            <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal"
                    Height="20">
                <TextBlock 
                    VerticalAlignment="Center" 
                    Text="[ Simple Library : version "
                    FontSize="11"
                    Margin="2,0,0,0"/>
                <TextBlock 
                    VerticalAlignment="Center" 
                    FontSize="11"
                    Margin="2,0,0,0"
                    Text="{x:Static local:AppConstant.APP_VERSION}"/>
            </StackPanel>

            <!-- Left Menu Bar -->
            <StackPanel Background="#4e6675" Width="160" DockPanel.Dock="Left">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Margin" Value="0,5,0,0"/>
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF6F9686"/>
                                    <GradientStop Color="#FF4E6675" Offset="0.313"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF4E6675"/>
                                    <GradientStop Color="#FF6F9686" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="Label">
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Foreground" Value="#bdd0ca"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                
                <Button Click="PublicationViewButton_Click">
                    <Border>
                        <Label Content="Publications"></Label>
                    </Border>
                </Button>

                <Button Click="AuthorViewButton_Click">
                    <Border>
                        <Label Content="Authors"></Label>
                    </Border>
                </Button>

                <Button Click="ShelfView_Click">
                    <Border>
                        <Label Content="Shelves"></Label>
                    </Border>
                </Button>

                <Button Click="ShelfView_Click">
                    <Border>
                        <Label Content="Publication Copies"></Label>
                    </Border>
                </Button>
            </StackPanel>

            <!-- Main Views -->
            <ContentControl x:Name="CurrentViewPlaceHolder" DockPanel.Dock="Right"></ContentControl>
        </DockPanel>
        
    </Border>

</Window>
