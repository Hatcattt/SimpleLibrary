<Window x:Class="WpfApp.View.Publication.CreatePublicationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.View.Publication" xmlns:viewmodel="clr-namespace:WpfApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:PublicationViewModel}"
        mc:Ignorable="d"
        MaxHeight="700" MaxWidth="900"
        WindowStartupLocation="CenterScreen"
        Icon="/image/icon/simple_library.ico"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="EditAuthorView">

    <Border BorderThickness="4"  BorderBrush="#4e6675" Style="{StaticResource PrimaryBorder}" Background="#FFEFEFEF" CornerRadius="0,0,20,20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Label Grid.ColumnSpan="2" Style="{StaticResource LabelHeaderLite}" Content="Add a new publication"></Label>

            <Grid  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Style="{StaticResource LabelInfo}" Content="ISBN"></Label>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ISBNinputText" Style="{StaticResource InputText}"/>
                    <Button Width="100" Height="35" Grid.Column="1" Content="Search with API" Click="SearchWithAPIButton_Click"/>
                </Grid>

                <Label Grid.Row="1" Style="{StaticResource LabelInfo}" Content="Title"></Label>
                <TextBox x:Name="TitleInput" Grid.Column="1" Grid.Row="1" Style="{StaticResource InputText}"/>

                <Label Grid.Row="2" Style="{StaticResource LabelInfo}" Content="Location"></Label>
                <TextBox Grid.Column="1" Grid.Row="2" Style="{StaticResource InputText}"/>

                <Label Grid.Row="3" Style="{StaticResource LabelInfo}" Content="Publisher"></Label>
                <TextBox x:Name="PublisherInput" Grid.Row="3" Grid.Column="1" Style="{StaticResource InputText}"/>

                <Label Grid.Row="4" Style="{StaticResource LabelInfo}" Content="Publisher Date"></Label>
                <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource InputText}"/>

                <Label Grid.Row="5" Style="{StaticResource LabelInfo}" Content="Language"></Label>
                <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource InputText}"/>
                
                <Label VerticalAlignment="Top" Grid.Row="6" Style="{StaticResource LabelInfo}" Content="Description"></Label>
                <TextBox x:Name="DescriptionInput" Grid.Row="6" Grid.Column="1" Style="{StaticResource InputTextDescription}"/>
                
                <Label VerticalAlignment="Top" Grid.Row="7" Style="{StaticResource LabelInfo}" Content="Author(s)"></Label>
                <StackPanel Grid.Row="7" Grid.Column="1" Margin="5">
                    <ListView x:Name="AuthorsLV">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="150" Header="Name"/>
                                <GridViewColumn Header="Function"/>
                                <GridViewColumn Header="Nationality"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <StackPanel Margin="5" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Button Width="50" Height="35" Style="{StaticResource AddButton}" Content="SAVE" Click="SavePublicationChangesButton_Click"></Button>
                        <Button Style="{StaticResource DeleteButton}" Content="QUIT" Click="QuitPublicationViewButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <StackPanel Margin="5" Grid.Row="1" Grid.Column="1">
                <GroupBox Header="Cover Manager">
                    <Image Margin="10" Height="200" Source="{Binding CoverImageURL}"/>
                </GroupBox>
                <StackPanel Margin="5" HorizontalAlignment="Center">
                    <Button Style="{StaticResource ButtonBaseStyle}" Content="UPLOAD"></Button>
                    <Button Style="{StaticResource AddButton}" Content="SAVE" Click="QuitPublicationViewButton_Click"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Margin="5" HorizontalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                <Button Style="{StaticResource AddButton}" Content="SAVE" Click="SavePublicationChangesButton_Click"></Button>
                <Button Style="{StaticResource DeleteButton}" Content="QUIT" Click="QuitPublicationViewButton_Click"/>

            </StackPanel>
        </Grid>
        
    </Border>
</Window>
