<UserControl x:Class="WpfApp.Controls.CounterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">

    <GroupBox Header="{Binding GroupBoxHeader, RelativeSource={RelativeSource AncestorType={x:Type local:CounterControl}}}" Width="80">
        <StackPanel>
            <TextBox Margin="10" Text="{Binding Value, RelativeSource={RelativeSource AncestorType={x:Type local:CounterControl}}}" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="+" Click="AddOne"/>
                <Button Content="-" Grid.Column="1" Click="RemoveOne"/>
                <Button Background="Gray" Grid.Row="1" Grid.ColumnSpan="2" Content="reset" FontSize="10" Click="ResetCounter"/>
            </Grid>
        </StackPanel>
    </GroupBox>

</UserControl>
